# Production Environment Configuration - Mainnet
# ⚠️  SECURITY CRITICAL: These values must be set before deployment

# Server Configuration
PORT=3000
NODE_ENV=production

# Solana Configuration (Mainnet)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_URL_BACKUP=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
SOLANA_CLUSTER=mainnet-beta

# Phase Configuration (PRODUCTION VALUES - SET BY BRANDON)
PHASE_FEE_WALLET=CHANGE_ME_BRANDON_WILL_SET_THIS
PHASE_VALIDATOR_VOTE_ACCOUNT=8p1VGE8YZYfYAJaJ9UfZLFjR5jhJhzjzKvVv5HYjLXhm
RAKE_FEE_BASIS_POINTS=10

# Authentication (MUST BE ROTATED FOR PRODUCTION)
API_KEY_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_KEY_FOR_PRODUCTION

# Rate Limiting (Production Values)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Production)
LOG_LEVEL=warn
LOG_FILE=/app/logs/app.log

# Health Check
HEALTH_CHECK_TIMEOUT_MS=3000

# Production Security
CORS_ORIGIN=https://your-production-domain.com,https://app.phaselabs.io
TRUST_PROXY=true

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD

# Database (if applicable)
DATABASE_URL=postgresql://DB_USER:DB_PASS@postgres:5432/agent_staking_prod

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Backup RPC endpoints for redundancy
SOLANA_RPC_URL_TERTIARY=https://rpc.ankr.com/solana
SOLANA_RPC_URL_QUATERNARY=https://solana-api.projectserum.com